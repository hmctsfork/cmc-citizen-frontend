{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, errorSummary, saveAndContinueButton %}
{% from "radios/macro.njk" import govukRadios %}

{% set heading = 'Do you believe the person you’re claiming against is 18 or over?' %}

{% block main_content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% set name = 'defendantAge' %}

      <form novalidate method="post" class="analytics-submit-event-trigger"
            data-event-action="Eligibility: defendant age"
            data-event-label-from="{{ name }}">
        {{ csrfProtection(csrf) }}

        {{ govukRadios({
          name: name,
          fieldset: {
            legend: {
              text: t(heading),
              isPageHeading: true,
              classes: 'govuk-fieldset__legend--l'
            }
          },
          items: [
            {
              value: DefendantAgeOption.YES.option,
              text: t('Yes'),
              checked: (form.valueFor(name) === DefendantAgeOption.YES)
            },
            {
              value: DefendantAgeOption.NO.option,
              text: t('No'),
              checked: (form.valueFor(name) === DefendantAgeOption.NO)
            },
            {
              value: DefendantAgeOption.COMPANY_OR_ORGANISATION.option,
              text: t('I’m claiming against a company or organisation'),
              checked: (form.valueFor(name) === DefendantAgeOption.COMPANY_OR_ORGANISATION)
            }
          ]
        }) }}

        {{ saveAndContinueButton() }}

      </form>
    </div>
  </div>

{% endblock %}
