{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, radioGroup, errorSummary, saveAndContinueButton %}
{% from "radios/macro.njk" import govukRadios %}

{% set heading = 'Do you need help paying your court fees?' %}
{% set additionalInformation = t('If youâ€™re on a low income or get certain benefits you could get financial help with court fees.') %}

{% block main_content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% set name = 'helpWithFees' %}

      <form novalidate method="post" class="analytics-submit-event-trigger"
            data-event-action="Eligibility: Select claimant address option"
            data-event-label-from="{{ name }}">
        {{ csrfProtection(csrf) }}

        {% set error = { text: form.errorFor(name) } if form.errorFor(name) else undefined %}
        {{ govukRadios({
          name: name,
          hint: { text:additionalInformation },
          classes: 'govuk-radios--inline',
          fieldset: {
            legend: {
              text: t(heading),
              isPageHeading: true,
              classes: 'govuk-fieldset__legend--l'
            }
          },
          errorMessage: error,
          items: [
            {
              value: YesNoOption.YES.option,
              text: t('Yes'),
              checked: (form.valueFor(name) === YesNoOption.YES)
            },
            {
              value: YesNoOption.NO.option,
              text: t('No'),
              checked: (form.valueFor(name) === YesNoOption.NO)
            }
          ]
        }) }}

        {{ saveAndContinueButton() }}

      </form>
    </div>
  </div>

{% endblock %}
