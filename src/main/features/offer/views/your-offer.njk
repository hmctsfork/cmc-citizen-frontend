{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, submitButton, errorSummary, textArea %}
{% from "date.njk" import dateInput %}
{% set heading = 'Make an offer' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <form novalidate method="post">
        {{ csrfProtection(csrf) }}

        <p class="govuk-body">{{ t('Make it clear what you will do and by when. For example: "I will pay you £240 on 29 April 2018 by bank transfer".') }}</p>

        <p class="govuk-body">{{ t('If you’re also asking {{ claimantName }} to do something, say clearly what it is and by when it should be done. For example: "You will fix the roof by 28 April 2018."', { claimantName: claim.claimData.claimant.name }) }}</p>

        <h2 class="bold-medium notice"> {{ t('Your offer') }}</h2>
        {{ textArea(id='offerText', label= '', name='offerText', form = form, rows = 10) }}

        <h4 class="govuk-heading-s"> {{ t('When will all parts of this offer be done?') }}</h4>

        {{ dateInput(form = form, name = 'completionDate',label = '', hint = t('For example, {{ futureDate }}', { futureDate: futureDate | inputDate })) }}

        <div class="panel panel-border-wide">
          <p class="govuk-body">
            {{ t('{{ claimantName }} can accept or reject your offer.', { claimantName: claim.claimData.claimant.name }) }}
          </p>
        </div>
        {{ submitButton('Submit offer') }}
      </form>
    </div>
  </div>
{% endblock %}
