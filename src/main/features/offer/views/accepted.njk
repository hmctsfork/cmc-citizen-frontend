{% extends "layout.njk" %}
{% from "support.njk" import supportWidget %}

{% set headingVisible = false %}
{% set heading = 'Confirmation' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="govuk-box-highlight">
        <h1 class="bold-large">{{ t('You’ve signed the agreement') }}</h1>
      </div>

      <h2 class="govuk-heading-m">{{ t('What happens next') }}</h2>
      <p class="govuk-body">
        {{
          t('{{ name }} will also be asked to sign. The agreement replaces the claim once you’ve both signed.', {
            name: claim.claimData.defendant.name
          })
        }}
      </p>

      {% include "includes/service_survey_link.njk" %}

      <p class="govuk-body">
        <a class="govuk-link" href="{{ DashboardPaths.dashboardPage.uri }}" class="button">{{ t('Finished') }}</a>
      </p>

      {{ supportWidget() }}
    </div>
  </div>
{% endblock %}
