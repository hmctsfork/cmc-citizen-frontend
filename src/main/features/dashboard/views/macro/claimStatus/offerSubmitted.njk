{% macro offerSubmittedForClaimantDashboard(claim) %}
  <p class="govuk-body">
    {{ t('The defendant has made an offer to settle out of court.') }}
  </p>
  {{ t('{{ defendantName }} has rejected your claim.',
    { defendantName:  claim.claimData.defendant.name }) }}
{% endmacro %}

{% macro offerSubmittedForClaimantClaimDetails(claim) %}
  <h2 class="govuk-heading-s">{{ t('Settle out of court') }}</h2>
  <p class="govuk-body">
    {{ t('{{ defendantName }} has made an offer to settle out of court.',
      { defendantName: claim.claimData.defendant.name }) }}
  </p>
  <p class="govuk-body">
    {{ _viewAndRespondToOfferLink(claim) }}
  </p>
{% endmacro %}

{% macro offerSubmittedForDefendantDashboard() %}
  <p class="govuk-body">
    {{ t('We’ve sent your offer to the claimant.') }}
  </p>
  {{ t('You have rejected the claim.') }}
{% endmacro %}

{% macro offerSubmittedForDefendantClaimDetails(claim) %}
  <h2 class="govuk-heading-s">{{ t('Settle out of court') }}</h2>
  <p class="govuk-body">
    {{ t('You made an offer to settle the claim out of court. {{ claimantName }} can accept or reject your offer.',
      { claimantName: claim.claimData.claimant.name }) }}
  </p>
  <p class="govuk-body">
    {{ t('We’ll email you when they respond.') }}
  </p>
{% endmacro %}

{% macro _viewAndRespondToOfferLink(claim) %}
  <a class="govuk-link" href="{{ OfferPaths.responsePage.evaluateUri({ externalId: claim.externalId }) }}">{{ t('View and respond to offer') }}</a>
{% endmacro %}
