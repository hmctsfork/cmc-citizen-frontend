{% extends "layout.njk" %}
{% from "./macro/caseHistory.njk" import caseHistoryForClaimantClaimDetails %}
{% from "../../claim/views/macro/about-claim-widget.njk" import aboutClaimWidget %}

{% set headingVisible = false %}
{% set heading = 'Claim status' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">
        <span class="heading-secondary">{{ t('Claim number:') }}</span>
        {{ claim.claimNumber if claim else 'Draft' }}
      </h1>
      <div>
        <h2 class="govuk-heading-m">{{ t('Claim status') }}</h2>
        {% if claim %}
          {{ caseHistoryForClaimantClaimDetails(claim, csrf) }}
        {% else %}
          <h2 class="bold-small">{{ t('This claim has not been submitted') }}</h2>
          <p class="govuk-body">
            {{ t('Your claim is saved as a draft.') }}
          </p>
          <p class="govuk-body">
            <a class="govuk-link" href="{{ ClaimPaths.taskListPage.uri }}">{{ t('Continue with claim') }}</a>
          </p>
        {% endif %}
      </div>
    </div>

    {% if claim %}
      <div class="govuk-grid-column-one-third">
        {{ aboutClaimWidget(user, claim) }}
      </div>
    {% endif %}
  </div>
{% endblock %}
