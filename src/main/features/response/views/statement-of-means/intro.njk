{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, saveAndContinueButton %}

{% set heading = 'Explain why you can`t pay immediately' %}
{% set claimantFullName = claim.claimData.claimant.name %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form novalidate method="post">
        {{ csrfProtection(csrf) }}
        <p class="govuk-body">{{ t('You need to give {{ claimantName }} details of your finances.', { claimantName: claimantFullName }) }}</p>
        <p class="govuk-body">{{ t('We`ll ask you for the details then we`ll send them to {{ claimantName }} to review.', { claimantName: claimantFullName }) }}</p>
        <p class="govuk-body">{{ t('If they reject your proposal, the court will make a new plan using your financial details.') }}</p>
        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
