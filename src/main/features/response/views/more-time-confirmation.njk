{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, submitButton %}

{% set heading = 'You have an extra 14 days to respond' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <p class="govuk-body">
        {{ t('You must respond before 4pm on {{ deadline }}.', { deadline: newDeadline | date }) }}
      </p>

      <p class="govuk-body">
        {{ t('Weâ€™ll email both you and {{ claimant }} confirming the additional response time.', { claimant: claimantFullName}) }}
      </p>

      <form method="post" novalidate>
        {{ csrfProtection(csrf) }}

        <div class="govuk-form-group">
          {{ submitButton('Continue') }}
        </div>
      </form>
    </div>
  </div>
{% endblock %}

