{% from "externalLink.njk" import externalLink %}

{% macro supportWidget(label = 'Help and support') %}
    <h2 class="govuk-heading-m">{{ t(label) }}</h2>
    <pre class="govuk-body compact">{{ t("Email: " + supportEmailAddress) }}</pre>
    <pre class="govuk-body compact">{{ t('Telephone: 0300 123 7050') }}</pre>
    <pre class="govuk-body">{{ t("Hours: 9am to 5pm, Monday to Friday") }}</pre>
    {{ _callCharges() }}
{% endmacro %}

{% macro mcolSupportWidget(label = 'Help and advice') %}
  <h2 class="govuk-heading-m">{{ t(label) }}</h2>
  <pre class="govuk-body compact">{{ t('Money Claim Online helpdesk') }}</pre>
  <pre class="govuk-body compact">{{ t('Email: ccbc@hmcts.gsi.gov.uk') }}</pre>
  <pre class="govuk-body compact">{{ t('Telephone: 0300 123 1057') }}</pre>
  <pre class="govuk-body">{{ t('Monday to Friday, 8:30am to 5pm') }}</pre>
  {{ _callCharges() }}
{% endmacro %}

{% macro _callCharges() %}
  <p class="govuk-body">
    {{ externalLink(t('Find out about call charges'), 'https://www.gov.uk/call-charges') }}
  </p>
{% endmacro %}

